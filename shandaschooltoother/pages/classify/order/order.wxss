/*切换栏*/
.swiper-tab {
  height: 40px;
  line-height: 40px;
  background: white;
  color:rgb(117, 116, 116) ;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom:1px solid rgb(180, 176, 176);
} 
.swiper-tab-list {
  margin: 0 0px;
  font-size: 14px;
}
.on {
  border-bottom:2px solid #009494;
  color: #009494;
}
 
.hot-box{
  height: 100%;
}
/*订单列表*/
  .orderDetails{
    background: #fff;
    border-bottom: 20rpx solid #f3f3f3;
    margin-top: 20rpx;
    }
    .orderListTitle{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #f3f3f3;
    
    }
    .orderListTitle .userImg{
    float: left;
    width: 70rpx;
    height: 70rpx;
    border-radius: 35rpx;
    margin:15rpx;
    }
    .orderListTitle .userName{
    padding-right: 50rpx;
    }
    .orderListTitle .orderStatus{
    float: right;
    margin-right: 20rpx;
    color: #2f7b27;
    font-size: 34rpx;
    }
    .orderListDetails{
    display: flex;
    height: 200rpx;
    border-bottom: 1rpx solid #f3f3f3;
    }
    .orderListDetails .productImg{
    flex: 1;
    height: 140rpx;
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    }
    .orderListDetails .productImg image{
    width: 100%;
    height: 100%;
    }
    .orderListDetails .productInfo{
    flex: 4;
    /* padding: 30rpx 30rpx; */
    margin-left:30rpx;
    margin-top:18rpx
    }
    .orderListDetails .productInfo .productTitle{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
    }
    .orderListDetails .productInfo .productDate{
      font-size: 29rpx;
      margin-top: 15rpx;
    }
    .orderListDetails .productInfo .productQuantity{
    /* float: right; */
    font-size: 29rpx;
    margin-top: 15rpx;
    }
    .productCount{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #f3f3f3;
    margin:0
    }
    /* .productCount1{
      margin-top:-20rpx
    } */
    .productCount>view{
    float: right;
    margin-right: 30rpx;
    }
    .swiper-box{
      margin-bottom: 82rpx;
    }
    .refMon{
      border:  1rpx solid #c9c7c7;
      margin-left: 30rpx;
      border-radius: 30rpx;
      padding-top: 10rpx;
      padding-bottom: 10rpx;
      padding-left: 20rpx;
      padding-right: 20rpx;
    }


