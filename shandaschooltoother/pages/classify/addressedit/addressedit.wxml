
<view class="weui-cells">
<view class="weui-cell">
  <view class="weui-label label-txt">姓名</view>
  <view class="weui-cell__bd">
  <input class="weui-input input-txt" placeholder-class="input-placeholder"   placeholder="请输入收货人姓名" value="{{address.name}}" bindinput="inputName" />
</view>
</view>
<view class="weui-cell">

  <view class="weui-label  label-txt">手机号</view>

<view class="weui-cell__bd">

  <input class="weui-input input-txt" type="number" placeholder-class="input-placeholder"   placeholder="请输入收货人手机号" value="{{address.mobile}}" bindinput="inputMobile"/>

</view>
</view>

<view class="weui-cell">

  <view class="weui-label label-txt">所在地址</view>

<view class="weui-cell__bd  input-txt">

  <picker mode="region" bindchange="bindRegionChange">
  <view class="{{address.city.length>0?'':'input-placeholder'}}" >{{address.city.length>0?address.city:'选择收货地址'}}</view>
  </picker>

</view>
</view>

<view class="weui-cell">

  <view class="weui-label label-txt">详细地址</view>

<view class="weui-cell__bd">

  <input class="weui-input input-txt"  placeholder-class="input-placeholder"   placeholder="请输入详细地址" value="{{address.street}}" bindinput="inputStreet"/>

</view>
</view>
</view>

<view class="check-default"  bindtap="clickDefault"  data-index="{{index}}">
<icon type="{{address.isDefault?'success':'circle'}}" size="15"></icon>
设为默认地址
</view>

<view class="add-address" bindtap="clickAdd" >
<view class="txt">保存并使用</view>
</view>


