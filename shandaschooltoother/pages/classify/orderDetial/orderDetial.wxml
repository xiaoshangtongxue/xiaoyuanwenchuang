<!--pages/orderForm/orderForm.wxml-->
<view class="big">
  <view class="kong"></view>
  <view class="one"> {{orderFormInf.orderStatus}}</view>
  <view class="kong"></view>
  <view wx:if="{{orderFormInf.orderStatus == '待付款'}}" class="timeOut">
订单还剩 <text >{{day}}天{{hour}}时{{minute}}分{{second}}秒</text>
关闭
  </view>
  <view class="three">
    <view wx:if="{{orderFormInf.imgArr<=0}}"  class="productImg">
      <image src="/images/kong.jpg" background-size="cover"></image>
    </view>
    <view wx:else class="productImg">
      <image  src="{{orderFormInf.imgArr[0]}}" background-size="cover"></image>
    </view>
    <view class="threeRight">
      <view class="threeRight1">物品名称：{{orderFormInf['GoodsName']}}</view>
      <!-- <view class="threeRight2">
        <text>购买时间：{{orderFormInf['BuyTime']}}</text>
      </view> -->
      <view class="threeRight4">价格：￥{{orderFormInf['GoodsPrice']}}</view>
    </view>
  </view>
  <view class="five">
    <view class="five1">订单人信息</view>
    <view class="five2">
      <view class="five21">
        <text class="five2_1">姓名</text>
        <text class="five2_2">{{orderFormInf['nickName']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">联系方式</text>
        <text class="five2_2">{{orderFormInf['phoneNumber']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">收货地址</text>
        <text class="five2_2">{{orderFormInf['address']}}</text>
      </view>
    </view>
    <view class="five1">订单信息</view>
    <view class="five2">
      <view class="five21">
        <text class="five2_1">物品名称</text>
        <text class="five2_2">{{orderFormInf['GoodsName']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">订单号</text>
        <text class="five2_2">{{orderFormInf['orderNo']}}</text>
      </view>
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='待发货'}}">
        <text class="five2_1">支付单号</text>
        <text class="five2_2">{{orderFormInf['orderCode']}}</text>
      </view>
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='待收货'}}">
        <text class="five2_1">支付单号</text>
        <text class="five2_2">{{orderFormInf['orderCode']}}</text>
      </view>
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='待评价'}}">
        <text class="five2_1">支付单号</text>
        <text class="five2_2">{{orderFormInf['orderCode']}}</text>
      </view>
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='退款/售后'}}">
        <text class="five2_1">退款编号</text>
        <text class="five2_2">{{orderFormInf['orderCode1']}}</text>
      </view>
     
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='待发货'}}">
        <text class="five2_1">下单日期</text>
        <text class="five2_2">{{orderFormInf['BuyTime']}}</text>
      </view>
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='待收货'}}">
        <text class="five2_1">下单日期</text>
        <text class="five2_2">{{orderFormInf['BuyTime']}}</text>
      </view>
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='待评价'}}">
        <text class="five2_1">下单日期</text>
        <text class="five2_2">{{orderFormInf['BuyTime']}}</text>
      </view>
      <view class="five21"wx:if="{{orderFormInf.orderStatus=='退款/售后'}}">
        <text class="five2_1">退款日期</text>
        <text class="five2_2">{{orderFormInf['BuyTime1']}}</text>
      </view>

      <view class="five21" wx:if="{{orderFormInf.orderStatus=='待评价'}}">
        <text class="five2_1">收货日期</text>
        <text class="five2_2">{{orderFormInf['modtime']}}</text>
      </view>

      <view class="five21" wx:if="{{orderFormInf.orderStatus=='待发货'}}">
        <text class="five2_1">支付方式</text>
        <text class="five2_2">微信支付</text>
      </view>
      <view class="five21" wx:if="{{orderFormInf.orderStatus=='待收货'}}">
        <text class="five2_1">支付方式</text>
        <text class="five2_2">微信支付</text>
      </view>
      <view class="five21" wx:if="{{orderFormInf.orderStatus=='待评价'}}">
        <text class="five2_1">支付方式</text>
        <text class="five2_2">微信支付</text>
      </view>
     
      <view class="five21">
        <text class="five2_1">订单总额</text>
        <text class="five2_2">￥{{orderFormInf['GoodsPrice']}}</text>
      </view>
    </view>
    
  </view>
<view class="kong1"></view>

<view class="seven" wx:if="{{orderFormInf.orderStatus=='待付款'}}">
  <view class="seven1" bindtap="quxiao">取消订单</view>
</view>
<view class="seven" wx:if="{{orderFormInf.orderStatus=='待收货'}}">
  <view class="seven1" bindtap="_contacthotel">申请退款</view>
</view>
<view class="seven" wx:if="{{orderFormInf.orderStatus=='待发货'}}">
  <view class="seven1" bindtap="_contacthotel">申请退款</view>
</view>

</view>



