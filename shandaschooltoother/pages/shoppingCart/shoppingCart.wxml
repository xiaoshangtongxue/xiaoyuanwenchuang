
<view class="cart-box" >

  <!-- 购物车未售商品 -->
  <view  wx:if="{{info}}" wx:for="{{carts}}" wx:key="{{carts}}" class='cart-goods'  >
    <!-- wx:if 是否选择显示不同图标 -->
  <view class='icon-wrapper' bindtap="selectList" data-index="{{index}}">
    <icon wx:if="{{item.selected}}" class='cart-icon' type="success" color="red"  />
    <icon wx:else type="circle" class='cart-icon'  />
  </view>
  <view  class='cart-img'  data-id="{{item._id}}" bindtap="goToDetail">
        <van-image
          width="100%"
          height="100%"
          fit="contain"
          src="{{item.imgArr[0]}}"
        />
      <view class='cart-message' >
        <text class='name'>【山大文创】{{item.GoodsName}}</text>
        <text class='press'>已售：{{item.GoodsSale}} 件</text>
        <text class='price'>售价：￥{{item.GoodsPrice}} </text>
      
        <view catchtap="stepper" style="position: absolute;right: 10rpx;margin-top: 47px;">
      
          <van-stepper  theme="round"  value="{{ item.buyLen }}" min="{{ buyNumMin }}" max="{{ buyNumMax }}"  data-index="{{index}}" bind:change="stepChange" />
          </view>
      </view>
  </view>  
    <!-- 删除按钮 -->
    <text bindtap="deleteList" data-index="{{index}}" class='delete'> × </text>
  </view>

